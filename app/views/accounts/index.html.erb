<div class = "container">
    <div class="row">
        <div class="col-8">
            <% @posts.each do |post| %> 
                <div class = "insta-post">    
                    <div class="post-meta">
                        <%= link_to image_tag(post.account.image.thumb.url, class: "img-circle"), profile_path(post.account.username) %>
                        <%= link_to post.account.username,  profile_path(post.account.username), class: "text-black"%>
                    </div>
                </div>
            <%= image_tag post.image.url, class: "img img-fluid" %>
             

            <div class="post-details">
                <div class="post-actions">
                    <span class="btn btn-success like-<%= post.id %> <% 'active' if post_liked_by_user?(post.id)  %> post-like" data-id="<% post.id %>">Like</span>
                    <span class="btn btn-success post-comment">Comment</span>
                </div>

                <p><strong id="post-<% post.id%>-likes"><%= post.total_likes_count %> Likes </strong></p>
                <p><strong id="post-<% post.id%>-comments"><%= link_to post.account.username,  profile_path(post.account.username), class: "text-black" %> </strong></p>
                
                <%= simple_format post.description%>

                <p class="text-muted"> <%= time_ago_in_words post.created_at%> ago</p>
            </div>
            <% end %>
        </div>
        <div class="col-4">
            <div class="account-summary">
                <p>
                    <%= link_to image_tag(current_account.image.thumb.url, class: "img-circle"), profile_path(current_account.username) if current_account.image.present? %>
                    <strong><%= current_account.username %> </strong> <br />
                </p>
                <p><%= current_account.full_name %></p>
            </div>
            <div class = "follower-suggestions">
                <p class = "text-muted"> <strong> People You May Know  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</strong>
                <%= link_to "View All", "#", class: "text-black" %> </p>
                <%= render "accounts/follower_suggestions" %>
            </div>
        </div>
    </div>
</div>