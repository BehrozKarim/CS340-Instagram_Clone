<div class="container">
    <div class="row">
        <div class="col-4">
            <%= image_tag @account.image.url, width: "200px", class: "img-circle profile-pic"%>
        </div>
        <div class="col-8 text-left">
            <h1><%= @account.full_name%> </h1>
            <%= link_to "Edit Profile", edit_account_registration_path, class: "btn btn-secondary"%>   
            <div class="profile-stats"><p><%= @account.posts.count%> Posts</p></div>      
            <div class="profile-stats"><p><%= @account.total_followers%> Followers</p></div>      
            <div class="profile-stats"><p><%= @account.total_following%> Following</p></div>    

            <p> <%= %> </p>
            <p> <%= @account.description %> </p>  
            <p> <%= link_to @account.website if @account.website.present?%></p>  
        </div>
    </div>
    <div class="row profile-posts">
        <% @account.posts.each do |post| %> 
        <div class="col-4">
            <div class="insta-post">
                <%= image_tag post.image.url, class: "img img-fluid" %>  
            </div>
        </div>
        <% end %>
    </div>
</div>

